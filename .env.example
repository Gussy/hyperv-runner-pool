# GitHub Personal Access Token
# For repository runners: requires 'repo' scope
# For organization runners: requires 'admin:org' -> 'manage_runners:org' scope
GITHUB_PAT=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub Organization name
GITHUB_ORG=your-organization

# GitHub Repository name (leave empty for organization-level runners)
GITHUB_REPO=your-repository

# Webhook secret for signature verification
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=your-webhook-secret-here

# HTTP server port
PORT=8080

# Use mock VM manager for macOS development (true/false)
# Set to 'true' on macOS for testing, 'false' or omit on Windows
USE_MOCK=false

# Orchestrator IP address for VMs to connect to
# Use your Tailscale IP or local network IP
# On Windows, get with: ipconfig | findstr IPv4
ORCHESTRATOR_IP=localhost

# VM Template and Storage Paths (optional - defaults to local vms/ folder)
# Leave these commented to use the default local paths, or uncomment to override
# VM_TEMPLATE_PATH=C:\custom\path\to\runner-template.vhdx
# VM_STORAGE_PATH=C:\custom\path\to\vm\storage

# Logging Configuration
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Log format: text, json (default: text)
# Use 'json' for structured logging in production
LOG_FORMAT=text
